pipeline {
    agent any
    stages {
        stage('node') {
            agent {
                label 'Node1'
            }
            steps {
                sh 'echo "Node IP:`hostname -I`"'
                sh 'echo -e "Node-Memory Details:\n"'
                sh 'free'
            }
        }
        stage('docker container') {
            steps {
                sh 'echo "container IP:`hostname -I`"'
                sh 'echo -e "container-Memory Details:\n"'
                sh 'free'
            }
        }
    }
}
